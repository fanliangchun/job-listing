

<div class="container">
    <div class="row">
        <div class="col-xs-8 col-xs-offset-2">
		    <div class="input-group inline-group">
                <div class="input-group-btn search-panel">
                    <button type="button" class="btn btn-success dropdown-toggle" data-toggle="dropdown">
                    	<span id="search_concept">筛选</span> <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" role="menu">
                      <li><%= link_to("最低薪资", jobs_path(:order => "by_lower_bound"))%></li>
                      <li><%= link_to("最高薪资", jobs_path(:oreder => "by_upper_bound"))%></li>
                      <li><%= link_to("刊发时间", jobs_path)%></li>
                    </ul>
                </div>
                <div>
                  <%= render :partial => "jobs/search_bar" %>
                </div>
            </div>
        </div>
	</div>
</div>



<br /><br />



<div id="wrapper">
<table class="table">
<tbody>


<% @jobs.each do |job| %>
  <h2>
    <%= link_to job.title, job %>
  </h2>
  <p>
    Published at
    <%= job.created_at.strftime("%b %d, %Y") %> |
    by
    <span><i class="fa fa-envelope" aria-hidden="true"></i>  <%= job.contact_email %></span>
    11@qq.com |
    at
    <span>&nbsp;&nbsp;<i class="fa fa-map-marker"></i>&nbsp;广州</span>

  </p>

  <span style="font-size: 20px; color: rgb(224,69,60)">
    <p>Salary: <%= job.wage_lower_bound %> ~ <%= job.wage_upper_bound %> </p>
  </span>
  <p>
    <%= truncate(job.description, length: 200) %>
  </p>
  <p>
    <%= link_to("投递简历", new_job_resume_path(job), :class => "btn btn-xs btn-success")%>
    <%= link_to("职位详情", job, :class => "btn btn-xs btn-warning")%>
  </p>

<% end %>
</tbody>
</table>
<br /><br /><br />
<div class="text-center">
  <%= will_paginate @jobs %>
</div>


</div>
